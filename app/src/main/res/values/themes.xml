<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MangaTranslator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_accent</item>
        <item name="colorPrimaryDark">@color/light_decor</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="android:windowBackground">@color/light_base</item>
        <item name="android:statusBarColor">@color/light_accent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MangaTranslator.Pink" parent="Theme.MangaTranslator">
        <item name="colorPrimary">@color/pink_base</item>
        <item name="colorPrimaryDark">@color/pink_decor</item>
        <item name="colorAccent">@color/pink_accent</item>
        <item name="android:windowBackground">@color/pink_base</item>
        <item name="android:statusBarColor">@color/pink_accent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
